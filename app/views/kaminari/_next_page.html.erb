<% unless current_page.last? %>

  <!-- Mobile -->
  <%= link_to url, rel: 'next', remote: remote, class: "mb0 btn btn--secondary u-hide--medium" do %>
    <%= inline_svg("icons/right-arrow.svg", class: "btn__add-on btn__add-on--center icon") %>
  <% end %>

  <!-- Desktop -->
  <%= link_to url, rel: 'next', remote: remote, class: "mb0 btn btn--secondary u-hide--medium-down" do %>
    <%= t("phrases.next_page") %>
  <% end %>

<% end %>