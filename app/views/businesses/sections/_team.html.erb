<% if @business.team_members.present? %>
  <div class="card js-section js-team js-toggle-truncate">
    <div class="card__section">
      <div class="card__header">
        <h3 class="card__title"><%= inline_svg("icons/users.svg", class: "icon icon--sm-small icon--brand") %><%= t("business.team") %></h3>
        <span class="btn btn--link js-view-all"><%= t("business.view_all") %></span>
      </div>
      <div class="grid grid--v-padded">
        <% @business.team_members.each do |team_member| %>
          <div class="grid__col--xs-12 grid__col--sm-6 grid__col--md-6 grid__col--lg-4 js-toggle-target">
            <div class="media media--middle small">
              <div class="media__figure">
                <%= image_tag(team_member.profile_image.url, class: "avatar") %>
              </div>
              <div class="media__body">
                <strong class="u-block mb0"><%= team_member.name %></strong>
                <span><%= team_member.role.capitalize %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="card js-team js-empty u-hide">
    <div class="card__section">
      <div class="card__header">
        <h3 class="card__title"><%= inline_svg("icons/users.svg", class: "icon icon--sm-small icon--brand") %><%= t("business.team") %></h3>
      </div>
      <div class="grid grid--v-padded">
        <div class="grid__col--xs-12">
          <p><%= t("business.missing") %></p>
        </div>
      </div>
    </div>
  </div>
<% end %>
