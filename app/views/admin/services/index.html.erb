<div class="card">
  <div class="card__section card__header card__section--border">
    <% if @subcategory %>
      <h3 class="card__title">
        <%= link_to "Categories / ", admin_categories_path,  class: 'u-text-light u-text-regular' %>
        <%= link_to "#{@subcategory.category.name} / ", admin_sub_categories_path(category_id: @subcategory.category_id),  class: 'u-text-light u-text-regular' %>
        <%= @subcategory.name %>
      </h3>
    <% else %>
      <h3 class="card__title">Sub-categories</h3>
    <% end %>

    <a class="btn btn--xs-full btn--primary btn--small" href="/admin/services/new/?sub_category_id=<%= @subcategory ? @subcategory.id : '' %>">Add service</a>
  </div>

  <div class="card__section">
    <table class="js-services-table" data-source="<%= admin_services_path(format: :json) %>" data-sub-category-id="<%= params[:sub_category_id] %>">
      <thead>
        <tr>
          <th>Name (en)</th>
          <th>Name (ar)</th>
          <th>&nbsp;</th>
          <th>Category</th>
          <th>&nbsp;</th>
          <th>SubCategory</th>
          <th>Businesses</th>
          <th>Banner?</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</div>

<%= content_for :page_scripts do %>
  <%= javascript_include_tag 'admin/datatables/services' %>
<% end %>
