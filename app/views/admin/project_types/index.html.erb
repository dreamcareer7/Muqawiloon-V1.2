<div class="card">
  <div class="card__section">

    <div class="grid">
      <div class="grid__col--xs-12 grid__col--sm-8">
        <h3 class="mb2">Project types</h3>
      </div>
      <div class="grid__col--xs-12 grid__col--sm-4 u-text-right--small">
        <a class="btn btn--xs-full btn--primary btn--small" href="/admin/project_types/new/">Add project type</a>
      </div>
    </div>

    <div class="fieldset">
      <div class="grid grid--tight">
        <div class="grid__col--xs-4 grid__col--md-3">
          <div class="field">
            <div class="field__input-wrapper">
              <%= inline_svg("icons/dropdown.svg", class: "icon field__add-on field__add-on--right field__add-on--clickthrough field__add-on--clickthrough") %>
              <select class="field__input field__input--right-add-on js-select-filter" data-column="2"></select>
            </div>
          </div>
        </div>
      </div>
    </div>

    <table id="js-project-types-table" data-source="<%= admin_project_types_path(format: :json) %>">
      <thead>
        <tr>
          <th>Name (en)</th>
          <th>Name (ar)</th>
          <th>Category type</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>

  </div>
</div>

<%= content_for :page_scripts do %>
  <%= javascript_include_tag 'admin/datatables/projectTypes' %>
<% end %>

