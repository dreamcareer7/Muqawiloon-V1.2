<%= simple_form_for [:admin, @project_type] do |f| %>

  <div class="grid">
    <div class="grid--xs-12 grid__col--md-12">
      <div class="card">

        <div class="card__section card__section--border">
          <h3 class="card__title">
            <%= link_to 'Project types /', admin_project_types_path,  class: 'u-text-light u-text-regular' %> <%= action_name == 'edit' ? @project_type.name : "New" %>
          </h3>
        </div>

        <div class="card__section">
          <div class="fieldset">
            <div class="grid">
              <div class="grid__col--xs-12 grid__col--md-6">
                <div class="field">
                  <label class="field__label">* Name (en)</label>
                  <%= f.input :name_en, wrapper: :text_field, label: false %>
                </div>
              </div>
              <div class="grid__col--xs-12 grid__col--md-6">
                <div class="field">
                  <label class="field__label">* Name (ar)</label>
                  <%= f.input :name_ar, wrapper: :text_field, label: false %>
                </div>
              </div>
              <div class="grid__col--xs-12 grid__col--md-6">
                <div class="field">
                  <label class="field__label">Category type</label>
                  <div class="field__input-wrapper">
                    <%= inline_svg("icons/dropdown.svg", class: "icon field__add-on field__add-on--right field__add-on--clickthrough") %>
                    <%= f.input :category_type, input_html: { class: "field__input field__input--right-add-on" }, label: false %>
                  </div>
                </div>
              </div>
              <div class="grid__col--xs-12 grid__col--md-6"></div>
              <div class="grid__col--xs-12 grid__col--md-6">
                <div class="field">
                  <div class="btn-group">
                    <%= f.submit action_name == 'edit' ? t('form.update'): t('form.create'), class: 'btn btn--primary btn-group__item' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

<% end %>

