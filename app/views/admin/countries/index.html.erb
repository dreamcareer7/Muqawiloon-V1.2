<div class="card">
  <div class="card__section card__header card__section--border">
    <h3 class="card__title">Countries</h3>
    <a class="btn btn--xs-full btn--primary btn--small" href="/admin/countries/new/">Add country</a>
  </div>

  <div class="card__section">
    <table class="js-countries-table" data-source="<%= admin_countries_path(format: :json) %>">
      <thead>
        <tr>
          <th>Name (en)</th>
          <th>Name (ar)</th>
          <th>Cities</th>
          <th># of users</th>
          <th># of businesses</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</div>

<%= content_for :page_scripts do %>
  <%= javascript_include_tag 'admin/datatables/countries' %>
<% end %>
