<section class="section section--alt">
  <div class="site-wrap">
    <h1 class="section-heading">Forgot your password?</h1>
    <div class="grid grid--center">
      <div class="grid__col--xs-12 grid__col--sm-10 grid__col--md-6 grid__col--lg-5 grid__col--xlg-4">
        <fieldset class="fieldset">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="field">
              <div class="field__input-wrapper">
                <%= f.input :email, required: true, autofocus: true, wrapper: :text_field, class: "field_input" %>
              </div>
            </div>
            <div class="field">
              <%= f.submit "Reset password", id: "log-in", class: "btn btn--full btn--primary" %>
            </div>
          <% end %>
        </fieldset>
      </div>
    </div>
  </div>
</section>
