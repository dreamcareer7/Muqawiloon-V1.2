<div class="grid grid--center" style="margin-top: 30px;">
  <div class="grid__col--xs-12 grid__col--sm-10 grid__col--md-6 grid__col--lg-5 grid__col--xlg-4">
    <h2><%= t 'devise.invitations.edit.header' %></h2>

    <%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f| %>
      <fieldset class="fieldset">
        <%= devise_error_messages! %>
        <%= f.hidden_field :invitation_token %>

        <%= f.input :password, wrapper: :text_field %>
        <%= f.input :password_confirmation, wrapper: :text_field %>

        <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: "btn btn--primary" %>
      </fieldset>
    <% end %>
  </div>
</div>