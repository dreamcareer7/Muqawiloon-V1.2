<div class="modal js-problem">
  <div class="modal__table">
    <div class="modal__cell">
      <div class="modal__container">
        <button class="js-close-modal modal__close">
          <%= inline_svg("icons/close.svg", class: "icon") %>
        </button>
        <h2 class="modal__title"><%= t("business.report") %></h2>
        <p><%= t("claim_business.description") %></p>
        <%= simple_form_for AdminNotification.new, url: admin_notifications_path do |f| %>
          <fieldset class="fieldset">
            <%= f.input :content, wrapper: :text_area, as: :text, placeholder: t("contact_email.body"), label: false, required: true %>
            <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>
            <% if @business %>
              <%= f.input :business_id, as: :hidden, input_html: { value: @business.id } %>
            <% end %>
            <%= f.input :page_link, as: :hidden, input_html: { value: request.original_url } %>
            <%= f.input :notification_type, as: :hidden, input_html: { value: "problem_report" } %>
            <div class="field u-text-right">
              <%= f.submit t("contact_email.submit"), class: "btn btn--xs-full btn--primary" %>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
