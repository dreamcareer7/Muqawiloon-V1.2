          <div class="card__section card__section--border pb1 pt1 project-new-card">

            <div class="single-latest-activity-box relative lux">
              <div class="project-thumb-actions-wrapper">
                <div class="project-thumb-actions">
                  <i class="fa fa-ellipsis-v" aria-hidden="true"></i>
                </div>
                <div class="project-actions-list arrow_box">

                  <ul>
                    <li>
                      <%= link_to edit_user_project_path(project),  style: "text-decoration: none;color:black" do %>
                      <span class="activity-edit-button"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</span>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to user_project_path(project), method: :delete, class: "delete_project", style: "text-decoration: none;color:black", data:{confirm: "Are you sure to delete?"} , remote:true  do %>
                      <span class="activity-delete-button"><i class="fa fa-times" aria-hidden="true"></i> Delete</span>
                      <% end %>
                    </li>
                  </ul>
                </div>
              </div>
              <div class="heading-container">
                <div class="card__invitation">
                  <div class="card__title__hide_button">

                    <h5 class="heading">
                      <%= link_to project.title, user_project_path(project), class: "thumb-project-title", method: :get %>
                    </h5>
                    <div class="project-block">
                      <p>
                        <%=truncate(project.description, :length => 50)%>
                      </p>
                    </div>
                    <div class="project-block">
                      <strong>Budget: </strong>
                      <%=  project.project_budget %>(

                      <%=t("currency_types.#{project.currency_type}") %>)
                    </div>

                    <div class="project-block">
                      <strong> Timeline: </strong>
                      <%= project.timeline_type %>
                    </div>

                    <div class="project-block">
                      <strong>
                        <%= project.start_date.present? ? project.start_date.strftime("%Y/%m/%d") : " " %>
                      </strong>
                      <strong>
                        <%= project.end_date.present? ? "to #{project.end_date.strftime("%Y/%m/%d")}" : "to " %>
                      </strong>
                    </div>
                    <% if request.original_url.include?("Allprojects") %>
                    <span><%= project.creation_status %></span>
                    <% end %>
                  </div>
                </div>
                <% if params[:filter_by] == "Completed" || params[:filter_by] == "Ongoingprojects" %>
                <div class="sub-heading" style="color:black"> Contractor: <%= project.business.name %></div>
                <div class="sub-heading">
                  <%#= link_to user_project_path(project),  style: "text-decoration: none;color:black" do %>
                  <span class="activity-preview-button"><i class="fa fa-clock-o" aria-hidden="true"
                      style="color:black"></i> <%= project.project_status %> Oct 20</span>
                  <%# end %>
                  <%#= link_to edit_user_project_path(project),  style: "text-decoration: none;color:black" do %>
                  <span class="activity-edit-button"><i class="fa fa-money" aria-hidden="true" style="color:black"></i>
                    Budget (<%= project.project_budget %>)</span>
                  <%# end %>
                  <%= link_to user_project_project_business_path(project_id: project.id, id: project.business_id)  do %>
                  <span class="activity-delete-button"><i class="fa fa-edit" aria-hidden="true"></i> View
                    Contractor</span>
                  <% end %>
                </div>
         
                

                <% end %>
                <div class="project-bottom-thumb">
                <div class="flx-1"> Hired </div>
                <div class="flx-1"> <%= project.number_applied %> interested</div>

                <div class="project-location-thumb ">
                  <i class="fa fa-map-marker" aria-hidden="true"></i>
                  <span><%= "#{project.location.street_address}  #{project.location.city_country}" %></span>
                </div>
              </div>
              </div>

              <% if  params[:filter_by] == "Cancelled" %>
              <%= link_to "Activate again", new_user_project_path(project_type: "suppliers"), class: "btn-outline-primary btn-special activate-button-align ml2" %>
              <% end %>

              
            </div>
          </div>