      <% if business.business_hours[:weekend_hours][:shift_one_start].present? %>
        <%= business.business_hours[:weekend_hours][:shift_one_start].strftime('%l:%M%p') %> - 
      <% end %>
      <% if business.business_hours[:weekend_hours][:shift_one_end].present? %>
        <%= business.business_hours[:weekend_hours][:shift_one_end].strftime('%l:%M%p') %>
      <% end %>
      <% if business.business_hours[:weekend_hours][:shift_one_start] && business.business_hours[:weekend_hours][:shift_two_start].present? %>
        /
      <% end %>
      <% if business.business_hours[:weekend_hours][:shift_two_start].present? %>
        <%= business.business_hours[:weekend_hours][:shift_two_start].strftime('%l:%M%p') %> - 
      <% end %>
      <% if business.business_hours[:weekend_hours][:shift_two_end].present? %>
        <%= business.business_hours[:weekend_hours][:shift_two_end].strftime('%l:%M%p') %>
      <% end %>
    </small>
  </div>
<% end %>
