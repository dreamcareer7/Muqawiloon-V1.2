<% content_for :meta_description do %>
  "<%= t("home_page.header.head") %>. <%= t('home_page.header.sub_head', current_city: @current_city.name) %>"
<% end %>

<% content_for :meta_image do %>
  <%= banner.present? ? image_url(banner) : image_url('missing/defaultcity.jpg') %>
<% end %>

<% content_for :meta_url do %>
  <%= url %>
<% end %>
