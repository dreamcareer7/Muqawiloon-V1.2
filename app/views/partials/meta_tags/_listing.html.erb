<% content_for :meta_description do %>
  "<%= listing_type.description(@current_city) %>"
<% end %>

<% content_for :meta_url do %>
  <% if listing_type.is_a?(Category) %>
    "<%= root_url + category_path(id: listing_type.slug) %>"
  <% elsif listing_type.is_a?(SubCategory) %>
    "<%= root_url + sub_category_path(id: listing_type.slug) %>"
  <% elsif listing_type.is_a?(Service) %>
    "<%= root_url + service_path(id: listing_type.slug) %>"
  <% else %>
    "<%= root_url + categories_path %>"
  <% end %>
<% end %>

<% content_for :meta_image do %>
  "<%= banner.present? ? image_url(banner) : image_url('missing/defaultcity.jpg') %>"
<% end %>

<% content_for :meta_url do %>
