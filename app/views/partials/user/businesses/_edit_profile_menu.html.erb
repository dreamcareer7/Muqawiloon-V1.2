        <li class="sidebar-menu__item">
          <%= link_to t("business_profile.menu.certifications"), business_business_switch_form_section_path(@business, section: "certifications"), data: { section: "certifications" }, class: "sidebar-menu__link sidebar-menu__link--regular business-certifications", remote: true, method: :put %>
        </li>
        <li class="sidebar-menu__item">
          <span data-modal="please-upgrade" class="js-open-modal sidebar-menu__link  sidebar-menu__link--regular u-text-pointer"><%= t("business_profile.menu.team") %> - <small class="u-text-accent"><%= t("phrases.premium_only") %></small></span>
        </li>
        <li class="sidebar-menu__item">
          <span data-modal="please-upgrade" class="js-open-modal sidebar-menu__link sidebar-menu__link--regular u-text-pointer"><%= t("business_profile.menu.featured_projects") %> - <small class="u-text-accent"><%= t("phrases.premium_only") %></small></span>
