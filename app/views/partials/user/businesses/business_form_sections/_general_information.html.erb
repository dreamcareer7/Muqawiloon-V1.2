  <div class="grid">
    <div class="grid__col--md-12 grid__col--xs-12">
      <div class="field">
        <%= f.submit "update", class: "mt1 btn btn--primary btn--update float-right" %>
      </div>
    </div>
  </div>
</fieldset>

