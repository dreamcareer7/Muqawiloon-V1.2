                  <br>
                  <%# if current_admin && current_namespace == "admin" %>
                    <%#= link_to "Remove", delete_photo_admin_businesses_path(id: @business, photo_type: "banner"), class: "u-text-accent js-remove-image", remote: true, method: :put %>
                  <%# end %>
                <%# end %>
              </div>
            </div>

            <div class="media media--middle js-upload-fields u-text-pointer top__banner--company-logo">
              <div class="top__banner">
                <div class="">
                  <i class="fa fa-camera js-file-upload-button js-photo-placeholder icon--image icon--position"></i>
                  <%= image_tag(@business.logo.present? ? @business.logo.url : "missing/side_banner.png", width: "150",height:"150" , class: "media__figure u-rounded u-border u-text-pointer js-file-upload-button js-photo-placeholder") %>
