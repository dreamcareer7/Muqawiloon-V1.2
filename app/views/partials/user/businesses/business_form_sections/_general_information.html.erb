                </div>
                <% if @business.logo.present? %>
                  <br>
                  <% if current_admin && current_namespace == "admin" %>
                    <%= link_to "Remove", delete_photo_admin_businesses_path(id: @business, photo_type: 'logo'), class: "u-text-accent js-remove-image", remote: true, method: :put %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </fieldset>
  </div>
</div>

<div class="card">
  <div class="card__section">
    <div class="card__header">
      <h4 class="card__title"><%= inline_svg("icons/briefcase.svg", class: "icon icon--brand icon--small") %><%= t("business_profile.fields.header.general_information") %></h4>
    </div>

    <fieldset class="fieldset mb-4">
      <div class="grid">
        <% I18n.available_locales.each do |locale| %>
          <div class="grid__col--xs-12 grid__col--md-6">
            <%= f.input "name_#{ locale }", wrapper: "text_field", placeholder: t("business_profile.fields.general_information.business_name.placeholder", locale: locale), label: " #{ t("business_profile.fields.general_information.business_name.label", locale: locale ) } (#{ locale })", input_html: { class: " #{ locale == :ar ? 'rtl' : 'ltr' } ", title: "Name must start with a letter", disabled: (current_namespace != "admin" || (action_name != "edit" && current_namespace != "admin")) }, required: (true if action_name == "edit" && current_namespace == "admin") %>
          </div>
        <% end %>
      </div>
    </fieldset>

    <fieldset class="fieldset mb-4">
      <div class="grid">
        <div class="grid__col--xs-12 grid__col--md-6">
          <%= f.input :prevent_autocomplete, as: :fake, input_html: { class: "u-hide", name: "business[email]", type: "text" }, label: false %>
          <%= f.input :email, wrapper: "text_field", placeholder: t("business_profile.fields.general_information.email.placeholder"), label: t("business_profile.fields.general_information.email.label") %>
        </div>
        <div class="grid__col--xs-12 grid__col--md-6">
          <%= f.input :telephone, wrapper: "text_field", placeholder: t("business_profile.fields.general_information.phone_number.placeholder"), required: (true if action_name == "edit" && current_namespace == "admin"), input_html: { class: "js-phone" }, label: t("business_profile.fields.general_information.phone_number.label") %>
        </div>
      </div>
    </fieldset>

    <fieldset class="fieldset mb-4">
      <div class="grid">
        <div class="grid__col--xs-12 grid__col--md-6">
          <%= f.input :website, wrapper: "text_field", placeholder: t("business_profile.fields.general_information.website.placeholder") %>
        </div>
        <div class="grid__col--xs-12 grid__col--md-6">
          <%= f.input :license_number, wrapper: :text_field, label: t("business_profile.fields.general_information.license_number.label"), placeholder: t("business_profile.fields.general_information.license_number.placeholder"), required: false %>
        </div>
        <div class="grid__col--xs-12 grid__col--md-6">
          <label class="field__label"> License expiration date </label>
          <div class="field__input-wrapper">
            <%= inline_svg("icons/calendar.svg", class: "icon field__add-on field__add-on--right field__add-on--clickthrough field__add-on--clickthrough") %>
            <%= f.input :license_expiration_date, wrapper: :date_picker, as: :date_picker_future, required: true %>
          </div>
          <%#= f.input :license_expiration, wrapper: :text_field, label: t("business_profile.fields.general_information.license_number.label"), placeholder: t("business_profile.fields.general_information.license_number.placeholder"), required: false %>
        </div>
      </div>
    </fieldset>

  </div>
</div>

