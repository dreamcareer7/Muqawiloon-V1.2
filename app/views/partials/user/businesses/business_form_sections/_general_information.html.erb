<%= f.simple_fields_for :business_contact do |bc| %>
  <div class="card">
    <div class="card__section">
      <div class="card__header">
        <h4 class=""><%= inline_svg("icons/user.svg", class: "icon icon--brand icon--small") %><%= t("business_profile.fields.header.contact_person") %></h4>
      </div>
      <fieldset class="fieldset mb-4">
        <div class="grid">
          <div class="grid__col--xs-12 grid__col--md-12">
            <div class="field">
              <div class="media media--middle js-upload-fields u-text-pointer">
                <div class="media__figure" style="width:72px">
                  <%= image_tag(@business.business_contact.profile_image, width: "72", class: "media__figure u-circle u-text-pointer js-file-upload-button js-photo-placeholder") %>
                </div>
                <div class="media__body">
                  <div class="field__input-wrapper">
                    <span class="u-text-left u-text-dark js-file-upload-button"><%= t("business_profile.fields.additional_information.edit_photo") %></span><br>
                    <%= bc.input :profile_image, as: :file, input_html: { class: "js-file-upload", hidden: "true" }, label: false %>
                  </div>
                  <small>200x200</small>
                  <% if @business.business_contact.profile_image.present? %>
                    <br>
                    <% if current_admin && current_namespace == "admin" %>
                      <%= link_to t("words.remove"), delete_photo_admin_businesses_path(id: @business, photo_type: 'contact profile'), class: "u-text-accent js-remove-image", remote: true, method: :put %>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <% I18n.available_locales.each do |locale| %>
            <div class="grid__col--xs-12 grid__col--md-6">
              <%= bc.input "name_#{ locale }", wrapper: :text_field, label: " #{ t("business_profile.fields.additional_information.name.label", locale: locale ) } (#{ locale })", input_html: { class: input_text_direction(locale) } %>
            </div>
          <% end %>
          <div class="grid__col--xs-12 grid__col--md-6">
            <div class="field">
              <label class="field__label"><%= t("add_business.fields.contact_person.position.label") %></label>
              <div class="field__input-wrapper">
                <%= inline_svg("icons/dropdown.svg", class: "icon field__add-on field__add-on--right field__add-on--clickthrough u-clickthrough") %>
                <%= bc.input :position, placeholder: t("add_business.fields.contact_person.position.placeholder"), label: false, input_html: { class: "field__input field__input--right-add-on" } %>
              </div>
            </div>
          </div>
          <div class="grid__col--xs-12 grid__col--md-6">
            <%= bc.input :prevent_autocomplete, as: :fake, input_html: { class: "u-hide", name: "business[business_contact_attributes][email]", type: "text" }, label: false %>
            <%= bc.input :email, wrapper: :text_field, label: t("business_profile.fields.additional_information.email.label"), required: false %>
          </div>
          <div class="grid__col--xs-12 grid__col--md-6">
            <%= bc.input :phone_number, wrapper: :text_field, label: t("business_profile.fields.additional_information.phone_number.label"), input_html: { class: "js-phone" }, required: false %>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
<% end %>

