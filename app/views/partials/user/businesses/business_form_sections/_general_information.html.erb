<!-- New Business Profile -->

<div class="card">
  <div class="card__section">
    <div class="card__header">
      <h4 class="card__title"><%= inline_svg("icons/briefcase.svg", class: "icon icon--brand icon--small") %><%= t("business_profile.fields.header.business_image") %></h4>
    </div>
    <fieldset class="fieldset mb-4">
      <div class="grid">
        <div class="grid__col--xs-12 grid__col--md-12">
          <div class="top__banner" style="background-image:URL('<%= @business.banner.url(:large)%>')">
            <div class="top__banner-icons media media--middle js-upload-fields u-text-pointer">
              <i class="fa fa-camera js-file-upload-button js-photo-placeholder icon--image"></i>
              <div class="media__body">
                <div class="field__input-wrapper">
                  <%= f.input :banner, as: :file, input_html: { class: "js-file-upload", hidden: "true" }, label: false %>
