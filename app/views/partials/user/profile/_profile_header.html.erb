<div class="category-mega-menu">
  <div class="site-wrap">
    <div class="toggler">
      <a href="#">Select Category</a>
      <span class="toggle-btn">
        <i class="fa fa-bars"></i>
      </span>
    </div>
    <ul class="toplevel">
      <li class="submenu-holder"><a href="#" class="active"><%= t('nav.suppliers') %></a>
        <div class="submenu">
          <div class="list-and-see-all-container">
            <ul class="submenu-unorder-list">
              <% supplier_sub_caegory('suppliers').each do |sub_category| %>
                <li><%= link_to sub_category.name, sub_category_path(id: sub_category) %></li>
              <% end %>
            </ul>
            <div class="see-all-links">
              <%= link_to t('nav.view_all'), category_path(id: 'suppliers') %>
            </div>
          </div>
        </div>
      </li>
      <li class="submenu-holder"><a href="#"><%= t('nav.professionls') %></a>
        <div class="submenu">
          <% contractor_sub_categories.each do |category_name| %>
            <ul class="professionals-submenu-unorder-list">
              <h3 class="submenu-category-title"><%#= category_name[0] %></h3>
              <% supplier_sub_caegory(category_name[1]).limit(6).each do |sub_category| %>
                <li><%= link_to sub_category.name, sub_category_path(id: sub_category) %></li>
              <% end %>
              <h5 class="see-all-links"><%#= link_to t('nav.view_all'), category_path(id: category_name[1]) %></h5>
            </ul>
          <% end %>
        </div>
      </li>
      <li class="submenu-holder"><a href="#"><%= t('gallery.machinery') %></a>
        <div class="submenu">
          <div class="list-and-see-all-container">
            <ul class="submenu-unorder-list">
              <% supplier_sub_caegory('machinery').each do |sub_category| %>
                <li><%= link_to sub_category.name, sub_category_path(id: sub_category) %></li>
              <% end %>
            </ul>
            <div class="see-all-links">
              <%= link_to t('nav.view_all'), category_path(id: 'machinery') %>
            </div>
          </div>
        </div>
      </li>
      <li class="submenu-holder">
      <%= link_to gallery_index_path do %>
        <%= t('nav.gallery') %>
      <% end %>
      </li>
      <li class="submenu-holder">
        <%= link_to gallery_index_path do %>
          <i class="fa fa-lock"></i> <%= t('gallery.projects') %>
        <% end %>
      </li>
      <li class="submenu-holder">
        <%= link_to t("nav.more"), gallery_index_path  %>
      </li>
    </ul>
  </div>
</div>